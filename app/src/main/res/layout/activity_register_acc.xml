<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Register_acc">

    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:ems="10"
            android:id="@+id/name_regis" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.046"
            android:layout_marginStart="8dp" android:layout_marginTop="8dp"
            app:layout_constraintHorizontal_bias="0.56" android:hint="ชื่อ"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:ems="10"
            android:id="@+id/lastname_regis"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            app:layout_constraintHorizontal_bias="0.56" android:hint="นามสกุล"
            app:layout_constraintTop_toBottomOf="@+id/name_regis" android:layout_marginTop="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.015"
            android:layout_marginBottom="8dp"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:ems="10"
            android:id="@+id/bd_regis"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.007"
            android:layout_marginStart="8dp" android:layout_marginTop="8dp"
            app:layout_constraintHorizontal_bias="0.56" android:hint="วัน เดือน ปีเกิด"
            app:layout_constraintTop_toBottomOf="@+id/lastname_regis"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:ems="10"
            android:id="@+id/address_regis"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.018"
            android:layout_marginStart="8dp" android:layout_marginTop="8dp"
            android:hint="ที่อยู่" app:layout_constraintHorizontal_bias="0.56"
            app:layout_constraintTop_toBottomOf="@+id/radioGroup"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:ems="10"
            android:id="@+id/mail_regis"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.041"
            android:layout_marginStart="8dp" android:layout_marginTop="8dp"
            app:layout_constraintHorizontal_bias="0.56" android:hint="อีเมล"
            app:layout_constraintTop_toBottomOf="@+id/address_regis"/>
    <TextView
            android:text="เพศ"
            android:layout_width="93dp"
            android:layout_height="33dp" android:id="@+id/textView4" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
            android:textAlignment="viewStart" app:layout_constraintHorizontal_bias="0.337"
            app:layout_constraintVertical_bias="0.016" android:textSize="18sp"
            app:layout_constraintTop_toBottomOf="@+id/bd_regis"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/pass_regis"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginStart="8dp" android:layout_marginTop="8dp"
            app:layout_constraintVertical_bias="0.08" app:layout_constraintHorizontal_bias="0.56"
            android:hint="รหัสผ่าน" app:layout_constraintTop_toBottomOf="@+id/mail_regis"/>
    <TextView
            android:text="สมัครบัญชีผู้ใช้"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/submit_btn"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginTop="8dp"
            android:layout_marginStart="8dp" android:textSize="24sp" app:layout_constraintVertical_bias="0.416"
            app:layout_constraintHorizontal_bias="0.497" app:layout_constraintTop_toBottomOf="@+id/pass_regis"/>

    <RadioGroup
            android:layout_width="207dp"
            android:layout_height="92dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.542" app:layout_constraintVertical_bias="0.0"
            android:id="@+id/radioGroup" app:layout_constraintTop_toBottomOf="@+id/textView4">
        <RadioButton
                android:text="ชาย"
                android:layout_width="95dp"
                android:layout_height="wrap_content" android:layout_weight="1" android:id="@+id/sman_btn"/>
        <RadioButton
                android:text="หญิง"
                android:layout_width="95dp"
                android:layout_height="wrap_content" android:id="@+id/sgirl_btn" android:layout_weight="1"/>
    </RadioGroup>
</androidx.constraintlayout.widget.ConstraintLayout>