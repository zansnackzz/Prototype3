<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Detail_input">

    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="8dp" android:layout_marginBottom="8dp">
        <androidx.constraintlayout.widget.ConstraintLayout android:layout_width="match_parent"
                                                           android:layout_height="wrap_content"
                                                           android:orientation="vertical"
                                                           android:id="@+id/linearLayout">
            <ImageView
                    android:layout_width="224dp"
                    android:layout_height="180dp" app:srcCompat="@drawable/female" android:id="@+id/img_p_upload2"
                    android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
                    android:layout_marginTop="8dp"
                    app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="8dp" app:layout_constraintHorizontal_bias="0.497"
                    app:layout_constraintVertical_bias="0.056"/>
            <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_height="150dp"
                    android:layout_width="150dp"
                    app:layout_constraintBottom_toBottomOf="@+id/img_p_upload2"
                    app:layout_constraintStart_toStartOf="@+id/img_p_upload2"
                    app:layout_constraintTop_toTopOf="@+id/img_p_upload2" android:id="@+id/image_detail2"
                    android:rotation="0"
                    android:layout_marginBottom="3dp" app:layout_constraintEnd_toEndOf="@+id/img_p_upload2"/>
            <EditText
                    android:layout_width="200dp"
                    android:layout_height="45dp"
                    android:inputType="textPersonName"
                    android:ems="10"
                    android:id="@+id/name_patient2" android:layout_marginEnd="8dp"
                    app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
                    app:layout_constraintStart_toStartOf="parent" android:layout_marginBottom="8dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintHorizontal_bias="0.53"
                    app:layout_constraintTop_toBottomOf="@+id/img_p_upload2"
                    app:layout_constraintVertical_bias="0.047" android:hint="ชื่อ" android:textColorHint="#9A9A9A"/>
            <EditText
                    android:layout_width="200dp"
                    android:layout_height="45dp"
                    android:inputType="textPersonName"
                    android:ems="10"
                    android:id="@+id/lastname_patient2"
                    app:layout_constraintBottom_toBottomOf="parent" android:layout_marginStart="8dp"
                    app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="8dp"
                    app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.53"
                    app:layout_constraintTop_toBottomOf="@+id/name_patient2" app:layout_constraintVertical_bias="0.0"
                    android:layout_marginTop="8dp" android:hint="นามสกุล" android:textColorHint="#9A9A9A"/>
            <TextView
                    android:text="ปี"
                    android:layout_width="40dp"
                    android:layout_height="29dp" android:id="@+id/age_patient5"
                    android:layout_marginBottom="8dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/lastname_patient2"
                    app:layout_constraintVertical_bias="0.0" android:textSize="18sp" android:textAlignment="center"
                    android:textColor="#FD070707" android:layout_marginEnd="8dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/textView16" android:layout_marginStart="8dp"
                    app:layout_constraintHorizontal_bias="0.468"/>
            <TextView
                    android:text="เพศ"
                    android:layout_width="59dp"
                    android:layout_height="29dp" android:id="@+id/textView16"
                    app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="8dp" android:layout_marginBottom="8dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/lastname_patient2" app:layout_constraintHorizontal_bias="0.339"
                    app:layout_constraintVertical_bias="0.0" android:textSize="18sp"
                    android:textAlignment="center"
                    android:textColor="#FD070707"/>
            <RadioGroup
                    android:layout_width="116dp"
                    android:layout_height="67dp" app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
                    app:layout_constraintTop_toBottomOf="@+id/age_patient5" app:layout_constraintHorizontal_bias="0.46"
                    android:id="@+id/radioGroup77">
                <RadioButton
                        android:text="ชาย"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/manbutton" android:layout_weight="1"/>
                <RadioButton
                        android:text="หญิง"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/girlbutton" android:layout_weight="1"/>
            </RadioGroup>
            <EditText
                    android:layout_width="40dp"
                    android:layout_height="38dp"
                    android:inputType="textPersonName"
                    android:ems="10"
                    android:id="@+id/age_patient"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginBottom="8dp"
                    app:layout_constraintBottom_toTopOf="@+id/address_patient2"
                    app:layout_constraintStart_toEndOf="@+id/textView16" android:layout_marginStart="8dp"
                    app:layout_constraintHorizontal_bias="0.29" android:hint="อายุ" android:textColorHint="#9A9A9A"
                    android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.85"/>
            <EditText
                    android:layout_width="200dp"
                    android:layout_height="45dp"
                    android:inputType="textPersonName"
                    android:ems="10"
                    android:id="@+id/address_patient2"
                    app:layout_constraintTop_toBottomOf="@+id/radioGroup77"
                    android:layout_marginStart="8dp"
                    app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="8dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toTopOf="@+id/bd_patient2" android:layout_marginTop="5dp"
                    android:hint="ที่อยู่" app:layout_constraintHorizontal_bias="0.497"/>
            <EditText
                    android:layout_width="200dp"
                    android:layout_height="45dp"
                    android:inputType="textPersonName"
                    android:ems="10"
                    android:id="@+id/bd_patient2"
                    app:layout_constraintTop_toBottomOf="@+id/address_patient2" android:layout_marginEnd="8dp"
                    app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
                    app:layout_constraintStart_toStartOf="parent"
                    android:hint="วันเดือนปีเกิด"
                    app:layout_constraintHorizontal_bias="0.497" android:layout_marginBottom="1dp"
                    app:layout_constraintBottom_toTopOf="@+id/namecare_patient2" android:layout_marginTop="8dp"/>
            <EditText
                    android:layout_width="200dp"
                    android:layout_height="45dp"
                    android:inputType="textPersonName"
                    android:ems="10"
                    android:id="@+id/namecare_patient2"
                    android:layout_marginEnd="8dp"
                    app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
                    app:layout_constraintStart_toStartOf="parent"
                    android:hint="ชื่อผู้ดูแล"
                    app:layout_constraintHorizontal_bias="0.502" app:layout_constraintTop_toBottomOf="@+id/bd_patient2"
                    android:layout_marginTop="8dp" android:layout_marginBottom="8dp"
                    app:layout_constraintBottom_toTopOf="@+id/telcare_patient2"/>
            <EditText
                    android:layout_width="200dp"
                    android:layout_height="45dp"
                    android:inputType="textPersonName"
                    android:ems="10"
                    android:id="@+id/telcare_patient2"
                    android:layout_marginEnd="8dp"
                    app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
                    app:layout_constraintStart_toStartOf="parent"
                    android:hint="หมายเลขโทรศัพท์ผู้ดูแล"
                    app:layout_constraintHorizontal_bias="0.497"
                    android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/namecare_patient2"
                    app:layout_constraintBottom_toTopOf="@+id/spinner" app:layout_constraintVertical_bias="1.0"/>
            <Spinner
                    android:layout_width="190dp"
                    android:layout_height="40dp"
                    android:id="@+id/spinner" app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="8dp" android:layout_marginEnd="8dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.497"
                    android:scrollbarSize="6dp" app:layout_constraintBottom_toTopOf="@+id/spinner2"
                    android:layout_marginBottom="8dp" app:layout_constraintTop_toBottomOf="@+id/telcare_patient2"
                    android:layout_marginTop="8dp" android:textAlignment="center" android:spinnerMode="dialog"/>
            <Spinner
                    android:layout_width="270dp"
                    android:layout_height="40dp"
                    android:id="@+id/spinner2"
                    android:scrollbarSize="6dp"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/spinner"
                    android:layout_marginTop="3dp" android:layout_marginBottom="5dp"
                    app:layout_constraintBottom_toTopOf="@+id/detail_input_DB" android:spinnerMode="dialog"
                    android:textAlignment="center"/>
            <TextView
                    android:text="ประเมินภาวะผู้ป่วย"
                    android:layout_width="200dp"
                    android:layout_height="40dp"
                    android:id="@+id/detail_input_DB"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="8dp"
                    app:layout_constraintTop_toBottomOf="@+id/spinner2" android:textSize="18sp"
                    android:layout_marginTop="8dp" android:textAlignment="center"
                    android:textColor="#020202"
            />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>